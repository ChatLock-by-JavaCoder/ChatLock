<script>
  // Initialize Socket.IO client
  const socket = io();

  // Listen for the 'newPost' event from the server
  socket.on('newPost', (newPost) => {
    console.log('游닌 New Post Received:', newPost);
    
    // Dynamically add the new post to the feed without refreshing
    const feed = document.getElementById('feed');
    const newPostHTML = `
      <div class="post" id="post-${newPost._id}">
        <h4>${newPost.user.username}</h4>
        <p>${newPost.content}</p>
        ${newPost.image ? `<img src="/uploads/posts/${newPost.image}" alt="Post Image" />` : ''}
      </div>
    `;
    feed.insertAdjacentHTML('afterbegin', newPostHTML);
  });

  // Listen for the 'newUser' event
  socket.on('newUser', (user) => {
    console.log('游닌 New User Registered:', user);
    
    // Handle updating the feed with new user data, if necessary
    // For example, updating the suggestions or the user list
    const suggestionsList = document.getElementById('suggestions-list');
    const newUserHTML = `
      <li class="list-group-item">
        <div class="d-flex align-items-center">
          <img src="${user.profilePic}" alt="User Profile" class="rounded-circle mr-2" width="40" height="40">
          <span>${user.username}</span>
        </div>
      </li>
    `;
    suggestionsList.insertAdjacentHTML('afterbegin', newUserHTML);
  });

  // Listen for the 'postDeleted' event
  socket.on('postDeleted', (postId) => {
    console.log('游닌 Post Deleted:', postId);

    // Remove the post from the feed without refreshing the page
    const postElement = document.getElementById(`post-${postId}`);
    if (postElement) {
      postElement.remove();
    }
  });

  // Listen for the 'commentDeleted' event
  socket.on('commentDeleted', (postId, commentId) => {
    console.log('游닌 Comment Deleted:', commentId);
    
    // Remove the comment from the post's comment section
    const commentElement = document.getElementById(`comment-${commentId}`);
    if (commentElement) {
      commentElement.remove();
    }
  });
</script>
</html>
