  <!-- Main Content -->
  <main class="container-fluid mt-4">
    <div class="row">

      <!-- Left Sidebar (Desktop only) -->
      <div class="col-md-3 d-none d-md-block mb-3">
        <div class="mb-4 d-flex align-items-center">
