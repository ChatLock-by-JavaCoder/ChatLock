        <div class="bg-white rounded shadow-sm p-4 mb-4">
          <!-- Post Form Header -->
          <form class="w-100" action="/message/post" method="post" >
            <div class="d-flex align-items-center mb-3">
              <img src="<%= user.profilePic || '/images/default-avatar.png' %>" class="rounded-circle" width="40" height="40" />
              <div class="ml-3">
                <h6 class="mb-0"><%= user.username %></h6>
                <small class="text-muted">@<%= user.username %></small>
              </div>
            </div>


  

               <!-- Post Message -->
               <div class="form-group">
                <textarea class="form-control" name="message" rows="3" placeholder="What are you thinking, <%= user.username %>?" required></textarea>
              </div>

            
                 <div class="d-flex justify-content-end">
              <button type="submit" class="btn btn-primary btn-sm">Post</button>
            </div>
          </form>
        </div>
          
        <!-- Create Post -->
        <div class="container">
          <% messages.forEach(msg => { %>
            <div class="card mb-4 shadow-sm">
              <div class="card-body">
                <!-- Header -->
                <div class="d-flex justify-content-between align-items-center">
                  <div class="d-flex align-items-center">
                    <img src="<%= msg.user.profilePic || '/images/default-avatar.png' %>" class="rounded-circle mr-2" width="40" height="40" />
                    <div>
                      <h6 class="mb-0 font-weight-bold"><%= msg.user.username %></h6>
                      <small class="text-muted">@<%= msg.user.username %></small>
                    </div>
                  </div>
                  <% if (msg.user._id.toString() === user._id.toString()) { %>
                    <form action="/message/delete/<%= msg._id %>" method="POST" onsubmit="return confirm('Delete this post?')" class="ml-2">
                      <button type="submit" class="btn btn-sm btn-link text-danger p-0"><i class="fa-solid fa-trash"></i></button>
                    </form>
                  <% } else { %>
                    <i class="fa-solid fa-ellipsis text-muted"></i>
                  <% } %>
                </div>
    
                <!-- Message Content -->
                <div class="mt-3">
                  <p class="text-break mb-2"><%= msg.content %></p>
                </div>
    
                <!-- Actions -->
                <div class="d-flex justify-content-between mt-3 align-items-center">
                  <div class="d-flex align-items-center">
                    <!-- Like -->
                    <form action="/message/like/<%= msg._id %>" method="POST" class="mr-3">
                      <button type="submit" class="btn btn-link p-0 text-dark"><i class="fa-regular fa-heart"></i></button>
                      <span class="ml-1"><%= msg.likes?.length || 0 %></span>
                    </form>
    
                    <!-- Comment Toggle -->
                    <button type="button" class="btn btn-link p-0 mr-3 text-dark toggle-comment" data-id="<%= msg._id %>">
                      <i class="fa-regular fa-comment"></i>
                      <span class="ml-1"><%= msg.comments?.length || 0 %></span>
                    </button>
    
                    <i class="fas fa-share-alt"></i>
                  </div>
                  <i class="fas fa-bookmark"></i>
                </div>
    
                <!-- Comment Form -->
                <form action="/message/comment/<%= msg._id %>" method="POST" class="mt-3 comment-form d-none" id="comment-form-<%= msg._id %>">
                  <div class="input-group">
                    <input type="text" name="comment" class="form-control form-control-sm" placeholder="Write a comment..." required />
                    <div class="input-group-append">
                      <button class="btn btn-sm btn-outline-secondary" type="submit">Comment</button>
                    </div>
                  </div>
                </form>
    
                <!-- Comments -->
                <% if (msg.comments && msg.comments.length > 0) { %>
                  <div class="mt-3">
                    <h6 class="font-weight-bold">Comments:</h6>
                    <% msg.comments.forEach(comment => { %>
                      <div class="d-flex align-items-start mb-2">
                        <img src="<%= comment.user.profilePic || '/images/default-avatar.png' %>" class="rounded-circle mr-2" width="30" height="30" />
                        <div class="flex-grow-1">
                          <small class="d-block"><strong><%= comment.user.username %>:</strong> <%= comment.content %></small>
                          <small class="text-muted"><%= new Date(comment.createdAt).toLocaleString() %></small>
                        </div>
                        <% if (comment.user._id.toString() === user._id.toString()) { %>
                          <form action="/message/comment/delete/<%= msg._id %>/<%= comment._id %>" method="POST" onsubmit="return confirm('Delete this comment?')" class="ml-2">
                            <button type="submit" class="btn btn-sm btn-link text-danger p-0"><i class="fa-solid fa-trash"></i></button>
                          </form>
                        <% } %>
                      </div>
                    <% }); %>
                  </div>
                <% } %>
              </div>
            </div>
          <% }); %>
        </div>
      </div>

      <!-- Right Sidebar (Desktop only) -->
      <div class="col-md-3 d-none d-md-block">
        <div class="card shadow-sm">
          <div class="card-body">
            <h5 class="card-title">Suggestions</h5>
            <ul class="list-group list-group-flush">
              <% alluser.forEach((a) => { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  <div class="d-flex align-items-center">
                    <div class="flex">
                      <img src="<%= a.profilePic %>" alt="" class="rounded-circle mr-2" width="40" height="40"> 
                      <h6><%= a.username %></h6>
                    </div>
                  </div>
                  <button class="btn btn-sm btn-primary">Follow</button>
                </li>
              <% }) %>
            </ul>
          </div>
        </div>
      </div>
      

    </div>
  </main>

  <script>
    // Sidebar toggle
    document.getElementById('menuToggle').addEventListener('click', function() {
      document.getElementById('mobileSidebar').style.left = '0';
    });
  
    document.getElementById('closeSidebar').addEventListener('click', function() {
      document.getElementById('mobileSidebar').style.left = '-250px';
    });
  
